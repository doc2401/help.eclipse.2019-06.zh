<contexts>

  <!-- ===================== -->
  <!-- Welcome               -->
  <!-- ===================== -->

  <context id="universalWelcomePreference">
    <description>使用此对话框配置欢迎外观。页面选项卡可用于自定义每个欢迎页面的布局。</description>
    <topic label="欢迎定制" href="/org.eclipse.platform.doc.user/reference/welcome_preferences.htm"/>
  </context>

  <!-- ===================== -->
  <!-- Help                  -->
  <!-- ===================== -->

  <context id="f1Shell">
    <description>为许多界面提供了上下文相关的帮助，包括视图，向导，字段，按钮和菜单项。要访问此帮助，请通过单击或使用Tab键将焦点置于项目上，然后按F1（Linux上的Shift-F1，Mac上的帮助）。某些信息包含指向在线帮助中主题的链接，您可以在其中找到有关该项目的更多信息。这个infopop打开是因为你在infopop已经打开的时候请求了帮助。</description>
  </context>
  
  <context id="prefPageHelp">
    <description>使用此首选项页面可以控制<b>在哪里打开</ b>帮助，以及搜索行为。</description>
    <topic label="帮助偏好" href="/org.eclipse.platform.doc.user/reference/help_preferences.htm"/>
  </context>

  <context id="prefPageHelpContent">
    <description>使用此首选项页面配置帮助以从远程服务器（信息中心）下载帮助内容。</description>
	<topic label="帮助内容首选项" href="/org.eclipse.platform.doc.user/reference/help_preferences_content.htm"/>
	<topic label="远程帮助" href="/org.eclipse.platform.doc.isv/guide/ua_help_content_remote.htm"/>
  </context>

  <!-- ===================== -->
  <!-- Cheat Sheets          -->
  <!-- ===================== -->

  <context id="cheatSheetSelection">
    <description>该对话框用于打开备忘单。可以从列表中选择备忘单或通过浏览备忘单文件。</description>
    <topic label="使用备忘单" href="/org.eclipse.platform.doc.user/reference/ref-cheatsheets.htm"/>
  </context>
  <context id="cheatSheetView">
    <description>备忘单显示在此视图中。备忘单提供了有关如何完成任务的分步指导。</description>
    <topic label="使用备忘单" href="/org.eclipse.platform.doc.user/reference/ref-cheatsheets.htm"/>
  </context>
   <context id="searchScope">
      <description>使用此对话框可以定义可用于将搜索限制为特定书籍的搜索范围。</description>
      <topic href="tasks/help_search.htm" label="搜索帮助"/>
   </context>
   <context id="helpView">
      <description>此视图允许用户查看帮助页面，查看帮助目录或搜索帮助系统。</description>
      <topic href="concepts/help_view.htm" label="帮助视图"/>
   </context>
  
</contexts>
